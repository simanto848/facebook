            ><img src="/images/shortcut-4.png" alt="shortcut" />Website
                Experts</a
            >
        </div>
    </div>
    <!-- Left Section End -->

    <!-- Main Section Start -->
    <div class="main-content">
        <div class="story-gallery">
            <div class="story">
                <img src="/images/upload.png" alt="" />
                <p>Post Story</p>
            </div>
            <div class="story friend">
                <img src="/images/member-1.png" alt="" />
                <p>Name</p>
            </div>
            <div class="story friend">
                <img src="/images/member-2.png" alt="" />
                <p>Name</p>
            </div>
            <div class="story friend">
                <img src="/images/member-3.png" alt="" />
                <p>Name</p>
            </div>
            <div class="story friend">
                <img src="/images/member-4.png" alt="" />
                <p>Name</p>
            </div>
        </div>

        <div class="write-post-container">
            <div class="user-profile">
                {{#if user_profile_picture}}
                <img src="/{{user_profile_picture.image}}" alt="" />
                {{else}}
                <img src="/images/default_male.jpg" alt="" />
                {{/if}}
                <div>
                    {{#if user_profile}}
                    <p>{{user_profile.name}}</p>
                    {{else}}
                    <p>{{user.username}}</p>
                    {{/if}}
                    <small>Public <i class="fas fa-caret-down"></i></small>
                </div>
            </div>

            <div class="post-input-container">
                <form action="/post/create" method="post" enctype="multipart/form-data">
                    <textarea
                            name="text"
                            rows="10"
                            placeholder="What's on your mind, name?"
                    ></textarea>
                    <div class="add-post-links">
                        <a href="#"
                        ><img src="/images/live-video.png" alt="" />Live Video</a
                        >
                        <a href="#"><img src="/images/photo.png" alt="" /><input type="file" name="post_image" accept="image/*"></a>
                        <a href="#"
                        ><img src="/images/feeling.png" alt="" />Feeling/Activity</a
                        >
                    </div>
                    <button type="submit" class="btn">Post</button>
                </form>
            </div>
        </div>

        {{#each posts}}
        <div class="post-container">
            <div class="post-row">
                <div class="user-profile">
                    <a href="#"><img src="/images/profile-pic.png" alt="" /></a>
                    <div>
                        <a href="#"><p>User Name</p></a>
                        <span>June 24 2023, 13:40 pm</span>
                    </div>
                </div>
                <a href="#"><i class="fas fa-ellipsis-v"></i></a>
            </div>

            <p class="post-text">{{this.text}}</p>
            <img src="/{{this.image}}" alt="" class="post-img" />

            <div class="post-row">
                <div class="activity-icons">
                    <div><img src="/images/like-blue.png" alt="" /> 120</div>
                    <div><img src="/images/comments.png" alt="" /> 120</div>
                    <div><img src="/images/share.png" alt="" /> 120</div>
                </div>
                <div class="post-profile-icon">
                    <img src="/images/profile-pic.png" alt="" />
                </div>
            </div>
        </div>
        {{/each}}

    </div>
    <!-- Main Section End -->

    <!-- Right Section Start -->
    <div class="right-sidebar">
        <div class="sidebar-title">
            <h4>Events</h4>
            <a href="#">See All</a>
